server {
    listen 80;
    listen [::]:80;
    server_name forge1.local;
    return 301 https://$host$request_uri;
}
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name forge1.local;

    ssl_certificate     /etc/nginx/ssl/selfsigned.crt;
    ssl_certificate_key /etc/nginx/ssl/selfsigned.key;

    root /var/www/forge1/public;
    index index.html index.php;

    location /static/ {
        alias /var/www/forge1/assets/;
    }

    location / {
        try_files $uri $uri/ =404;
    }

    access_log /var/log/nginx/forge1.access.log;
    error_log  /var/log/nginx/forge1.error.log;
}

